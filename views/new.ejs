<% include ./partials/add_header %>


<h1>Enter A New Question and Answer</h1>
<p>Please fill out all fields</p>

<h2>Which Product(s) is this question applicable to</h2>
<p>Select at least one</p>

<!-- Product Selection Area -->
<div class="ui form">
    <div class="field">
        <label for="selection">Categorie(s)</label>
        <p>select at least one</p>
        <select multiple class="ui dropdown" name="cat" id="cat">
            <option value="General">General</option>
            <option value="HT25">HT25</option>
            <option value="WT15">WT15</option>
            <option value="WT25">WT25</option>
            <option value="Hub">Hub</option>
        </select>
    </div>
</div>

<!-- Question Section -->
<div class="ui fluid container">
    <div class="ui form">
        <div class="field">
            <label for="question"><h2 class="headlabel">Question Being Answered</h2></label>   
            <textarea name="question" id="question1" rows="2" placeholder="enter text here" default="some text"></textarea>
        </div>
    </div>
</div>

<!-- Quill JS Editor -->
<div id="ql-box" class="ui fluid form">
    <label><h2 class="headlabel">Response</h2></label>
    <div id="editor">
        <p><br></p>
    </div>

    <!-- Make Live Section -->
    <div class="ui toggle checkbox" id="makelive">
        <input type="checkbox" value="live" id="check1">
        <label><h2>Make Live?</h2></label>
    </div>

    <!-- Save & Delete Buttons -->
    <div id="button-box">
        <button class="ui positive basic button" onclick="test1ab()">Save</button>
        <button class="ui negative basic button">Delete</button>
    </div>
</div>


<script>
    $('.ui.dropdown').dropdown();
    $('#multi-select')
  .dropdown()
;
</script>

