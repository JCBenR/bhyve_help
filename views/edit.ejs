<!-- Quill JS Editor -->
<div id="ql-box" class="ui fluid form">
    <label for="blog[answer]"><h2 class="headlabel">Response</h2></label>
    <input type="hidden" name="blog[answer]" id="answer">
    <div id="editor">
        <%-blog.answer%>
</div>
</div>
    
<!-- Make Live Section -->

<div class="ui selection dropdown">
    <input type="hidden" name="blog[display]">
    <i class="dropdown icon"></i>
    <div id="display" class="default text"></div>
    <div class="menu">
        <div class="item" data-value="1">Active</div>
        <div class="item" data-value="0">Not Active</div>
    </div>
</div>

<!-- Save & Delete Buttons -->
<input type="submit" class="ui green big basic button">
</form>
<form action="/help/<%= blog._id %>?_method=DELETE" method="post">
    <button class="ui negative basic button" id="delete">DELETE</button>
</form>

<script>
    $('.ui.dropdown').dropdown();
</script>

