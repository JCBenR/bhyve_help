<% include ./partials/add_header %>


<h1>Edit <%=blog.question%> </h1>
<p>Please fill out all fields</p>

<h2>Which Product(s) is this question applicable to</h2>
<p>Select at least one</p>
<!-- Product Selection Area -->
<form class="ui form" action="/help/<%= blog._id %>?_method=PUT" method="POST">

<div class="ui form">
    <div class="field">
        <select multiple class="ui dropdown" name="blog[products]" id="products">
            <option value="General">General</option>
            <option value="HT25">HT25</option>
            <option value="WT15">WT15</option>
            <option value="WT25">WT25</option>
            <option value="Hub">Hub</option>
        </select>
    </div>
</div>

<!-- Question Section -->
<div class="ui fluid container">
    <div class="ui form">
        <div class="field">
            <label for="blog[question]"><h2 class="headlabel">Question Being Answered</h2></label>  
            <input type="text" name="blog[question]" value="<%=blog.question%>"> 
        </div>    
    </div>
</div>


